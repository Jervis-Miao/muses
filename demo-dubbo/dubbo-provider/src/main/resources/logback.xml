<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns="http://www.chaos.com/logback.xsd">

  <contextName>muses-dubbo-provider</contextName>

  <define name="propFile" class="com.muses.common.log.FilePropertyDefiner"/>
  <property resource="${propFile}"/>

  <appender name="ALIBABA-APPENDER" class="ch.qos.logback.core.FileAppender">
    <file>${log.path}/muses-dubbo-provider.alibaba.log</file>
    <append>true</append>
    <!-- set immediateFlush to false for much higher logging throughput -->
    <immediateFlush>true</immediateFlush>
    <!-- 日志格式 -->
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ["muses-dubbo-provider"] ["%thread"] [%p] %c#%M - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="com.alibaba.dubbo" level="INFO" additivity="false">
    <appender-ref ref="ALIBABA-APPENDER"/>
  </logger>

  <appender name="SPRING-APPENDER" class="ch.qos.logback.core.FileAppender">
    <file>${log.path}/muses-dubbo-provider.spring.log</file>
    <append>true</append>
    <!-- set immediateFlush to false for much higher logging throughput -->
    <immediateFlush>true</immediateFlush>
    <!-- 日志格式 -->
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ["muses-dubbo-provider"] ["%thread"] [%p] %c#%M - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="org.springframework" level="INFO" additivity="false">
    <appender-ref ref="SPRING-APPENDER"/>
  </logger>

  <appender name="APP-APPENDER" class="ch.qos.logback.core.FileAppender">
    <file>${log.path}/muses-dubbo-provider.app.log</file>
    <append>true</append>
    <!-- set immediateFlush to false for much higher logging throughput -->
    <immediateFlush>true</immediateFlush>
    <!-- 日志格式 -->
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ["muses-dubbo-provider"] ["%thread"] [%p] %c#%M - %m%n</pattern>
    </encoder>
  </appender>
  <logger name="com.muses" level="DEBUG" additivity="false">
    <appender-ref ref="APP-APPENDER"/>
  </logger>

  <appender name="CONSOLE-APPENDER" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ["muses-dubbo-provider"] ["%thread"] [%p] %c#%M - %m%n
      </pattern>
    </encoder>
  </appender>
  <logger name="com.muses" level="DEBUG" additivity="false">
    <appender-ref ref="CONSOLE-APPENDER"/>
  </logger>

  <appender name="STDOUT-APPENDER" class="ch.qos.logback.core.FileAppender">
    <file>${log.path}/muses-dubbo-provider.stdout.log</file>
    <append>true</append>
    <!-- set immediateFlush to false for much higher logging throughput -->
    <immediateFlush>true</immediateFlush>
    <!-- 日志格式 -->
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} ["muses-dubbo-provider"] ["%thread"] [%p] %c#%M - %m%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="CONSOLE-APPENDER"/>
    <appender-ref ref="STDOUT-APPENDER"/>
  </root>
</configuration>
