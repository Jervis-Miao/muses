<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		   http://www.springframework.org/schema/context
		   http://www.springframework.org/schema/context/spring-context-4.3.xsd"
       default-lazy-init="false">

  <!-- 替换${}占位符 -->
  <context:property-placeholder ignore-resource-not-found="true" properties-ref="properties" local-override="true"/>

  <!-- 定义PropertiesContext -->
  <bean id="propertiesContext" class="com.muses.common.utils.PropertiesContext"/>

  <beans profile="development">
    <!-- 加载properties -->
    <bean id="properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
      <property name="locations">
        <list>
          <value>classpath*:/properties/application.properties</value>
          <value>classpath*:/properties/application-development.properties</value>
        </list>
      </property>
    </bean>
  </beans>
  <beans profile="test">
    <!-- 加载properties -->
    <bean id="properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
      <property name="locations">
        <list>
          <value>classpath*:/properties/application.properties</value>
          <value>classpath*:/properties/application-test.properties</value>
        </list>
      </property>
    </bean>
  </beans>

</beans>