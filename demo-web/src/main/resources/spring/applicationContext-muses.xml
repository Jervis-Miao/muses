<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <description>导入的applicationContext文件列表</description>

    <!-- orika 集成 -->
    <import resource="classpath:orika/orika-mapper.xml"/>
    <!-- shiro 集成 -->
    <import resource="classpath:/shiro/shiro-spring.xml"/>
    <!-- spring-mvc 集成 -->
    <import resource="classpath:/spring/spring-mvc.xml"/>
    <!-- Mybatis 集成 -->
    <import resource="classpath:mybatis/mybatis-spring.xml"/>
    <!-- email 集成 -->
    <import resource="classpath:/email/email.xml"/>
</beans>